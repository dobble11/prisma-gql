{
  "name": "prisma-gql",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "check": "prettier --check . && eslint --quiet .",
    "prepare": "husky"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "1.10.15"
  },
  "engines": {
    "node": ">=18.15.0"
  },
  "packageManager": "pnpm@8.0.0",
  "lint-staged": {
    "{packages,apps}/**/!(generated)/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "{packages,apps}/**/!(generated)/*.{js,ts,tsx,graphql,yml,json}": [
      "prettier --write"
    ]
  }
}
