    "version": "0.2.0",
    "configurations": [
      {
        "type": "node-terminal",
        "name": "dev",
        "request": "launch",
        "command": "pnpm run dev",
        "cwd": "${workspaceFolder}",
        "serverReadyAction": {
          "action": "debugWithChrome",
          "uriFormat": "http://localhost:3010",
          "pattern": "Local:",
          "killOnServerStop": true,
          "webRoot": "${workspaceFolder}/apps/client"
        }
      }
    ]
  }
  